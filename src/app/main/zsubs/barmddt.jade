div(ng-controller="CctlController as cc")
  form#f2(role="form")
    .form-group
      statinfo
        label
          strong
            small.text-info Reasons
        select.form-control.selectpicker(ng-init="cc.form2.res='TRM'", ng-model="cc.form2.res")
          option(value='CLB') CL Breach
          option(value='DUB') Due Breach
          option(value='FRD') Fraud
          option(value='OTH') Other
          option(value='VOL') Voluntary
          option(value='ADM') Admin
          option(value='TRM') Termination
    .form-group
      statinfo
        label
          strong
            small.text-info Comment
        textarea.form-control(rows='4', ng-model="cc.form2.cmt")
    button.btn.btn-info(ng-click="cc.b1()") Barr
